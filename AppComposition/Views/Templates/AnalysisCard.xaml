<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="PasswordManager.AppComposition.Views.Templates.AnalysisCard"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="this"
    BindingContext="{Reference this}">
    <Border
        BackgroundColor="Transparent"
        HeightRequest="90"
        StrokeThickness="1"
        WidthRequest="90">
        <Border.StrokeShape>
            <RoundRectangle BackgroundColor="{StaticResource DarkBorder}" CornerRadius="20, 20, 20, 20" />
        </Border.StrokeShape>

        <VerticalStackLayout BindingContext="{Reference this}" VerticalOptions="Center">
            <Label
                FontAttributes="Bold"
                FontSize="20"
                HorizontalTextAlignment="Center"
                Text="{Binding NumberOfPasswords}" />

            <Label
                FontSize="15"
                HorizontalTextAlignment="Center"
                Text="{Binding Group}" />
        </VerticalStackLayout>
    </Border>
</ContentView>
